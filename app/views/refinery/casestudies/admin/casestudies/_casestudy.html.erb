<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(casestudy) -%>">
  <span class='title'>
    <%= casestudy.title %>

  </span>
  <span class='actions'>
    
    <%= link_to refinery_icon_tag("application_go.png"), refinery.casestudies_casestudy_path(casestudy),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    
    <%= link_to refinery_icon_tag("application_edit.png"), refinery.edit_casestudies_admin_casestudy_path(casestudy),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), refinery.casestudies_admin_casestudy_path(casestudy),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'refinery.admin.delete', :title => casestudy.title),
        :method => :delete %>
  </span>
</li>
