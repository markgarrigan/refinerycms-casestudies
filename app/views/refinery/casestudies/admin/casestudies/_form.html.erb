<%= form_for [refinery, :casestudies_admin, @casestudy] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @casestudy,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= render '/refinery/admin/wysiwyg',
                :f => f,
                :fields => [:description, :body],
                :object => "casestudies/casestudy" -%>
  </div>

  <div class='field'>
    <%= f.label :date -%>
    <%= f.datetime_select :date -%>
  </div>

  <div class='field'>
    <%= f.label :picture -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :picture_id,
               :image => @casestudy.picture,
               :toggle_image_display => false -%>
  </div>

  <div class='field'>
    <%= f.label :samples -%>
    <%= f.check_box :samples, :checked => @casestudy[:samples] -%>
  </div>

  <div class='field'>
    <%= f.label :display -%>
    <%= f.check_box :display, :checked => @casestudy[:display] -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.casestudies.admin.casestudies.casestudy'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @casestudy.title) -%>
<% end -%>

<% content_for :javascripts do -%>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end -%>
