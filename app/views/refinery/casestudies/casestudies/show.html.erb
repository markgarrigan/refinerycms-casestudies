<% content_for :body_content_title do %>
  <%= @casestudy.title %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @casestudy.title %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @casestudy.description %>
    </p>
  </section>
  <section>
    <h1>Body</h1>
    <p>
      <%=raw @casestudy.body %>
    </p>
  </section>
  <section>
    <h1>Date</h1>
    <p>
      <%=raw @casestudy.date %>
    </p>
  </section>
  <section>
    <h1>Picture</h1>
    <p>
      <%= image_fu @casestudy.picture, nil %>
    </p>
  </section>
  <section>
    <h1>Samples</h1>
    <p>
      <%=raw @casestudy.samples %>
    </p>
  </section>
  <section>
    <h1>Display</h1>
    <p>
      <%=raw @casestudy.display %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="casestudies">
      <% @casestudies.each do |casestudy| %>
        <li>
          <%= link_to casestudy.title, refinery.casestudies_casestudy_path(casestudy) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
